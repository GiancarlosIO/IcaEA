.container-max
  .container-logo
    %h2.title-center
      Registrese
  .devise-container
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        = f.text_field :name , autofocus: true , placeholder: "Ingrese su nombre"
      .field
        = f.email_field :email , placeholder: "Ingrese su email"
      .field
        = f.password_field :password, autocomplete: "off" , placeholder: "Ingrese su contraseña"
      .field
        = f.password_field :password_confirmation, autocomplete: "off" , placeholder: "Vuelva a ingresar su contraseña"
      .actions
        = f.submit "Sign up"
= render "devise/shared/links"
